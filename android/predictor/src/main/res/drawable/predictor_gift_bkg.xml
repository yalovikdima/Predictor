<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/predictor_gift_bkg"/>
            <corners android:radius="20dp" />

        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/predictor_gift_bkg"/>
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="@color/predictor_gift_bkg_border" />
        </shape>
    </item>
</layer-list>